<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.vs_lukasbi_sensors"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.ethz.vs_lukasbi_sensors.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.ethz.vs_lukasbi_sensors.SensorActivity"
            android:label="@string/title_activity_sensor"
            android:parentActivityName="ch.ethz.vs_lukasbi_sensors.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.ethz.vs_lukasbi_sensors.MainActivity" />
        </activity>
        <activity
            android:name="ch.ethz.vs_lukasbi_sensors.ActuatorsActivity"
            android:label="@string/title_activity_actuators"
            android:parentActivityName="ch.ethz.vs_lukasbi_sensors.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.ethz.vs_lukasbi_sensors.MainActivity" />
        </activity>
    </application>

</manifest>
